{
  "manifest_version": 3,
  "version": "1.0.0",
  "name": "Floating Player",
  "description": "Float any video player on the page",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["storage", "activeTab"],
  "action": {
    "default_title": "Floating Player"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["<all_urls>"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["/*.js", "/*.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
